  },
  "contributors": [
    {
      "name": "Thomas Chan",
      "email": "907070676@qq.com"
    }
  ],
  "gitbook": {
    "properties": {
      "styles": {
        "type": "object",
        "title": "Custom Stylesheets",
        "properties": {
          "website": {
            "title": "Stylesheet for website output",
            "default": "gitbook/website.css"
          }
